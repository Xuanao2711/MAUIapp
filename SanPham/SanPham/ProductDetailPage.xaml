<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SanPham.ProductDetailPage"
             Title="ProductDetailPage">
    <StackLayout>
        <Image Source="{Binding Image}" HorizontalOptions="CenterAndExpand" HeightRequest="200" Aspect="AspectFit" />
        <StackLayout Spacing="5">
            <Label Text="{Binding Title}" FontSize="Medium" FontAttributes="Bold"/>
            <Label Text="{Binding Price, StringFormat='Price: {0:C}'}" FontSize="Small" TextColor="Red"/>
            <Label Text="{Binding Category}" FontSize="Small" />
            <Label Text="{Binding Description}" FontSize="Small" />
        </StackLayout>
    </StackLayout>

</ContentPage>