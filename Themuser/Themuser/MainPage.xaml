<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Themuser.MainPage">

    <StackLayout Padding="20">
        <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
            <Button Text="Thêm User" Clicked="OnAddUserClicked" />
            <Button Text="Sắp Xếp" Clicked="OnSortClicked" />
            <Button Text="Xóa Tất" Clicked="OnDeleteAllClicked" />
        </StackLayout>
        <ListView x:Name="UsersListView" ItemsSource="{Binding Users}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal">
                            <Label Text="{Binding Order}" WidthRequest="30" HorizontalOptions="Start" />
                            <Label Text="{Binding Name}" HorizontalOptions="StartAndExpand" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>

</ContentPage>
